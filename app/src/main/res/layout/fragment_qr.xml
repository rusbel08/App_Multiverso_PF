<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Preview de la cámara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay para indicar zona de escaneo -->
    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_qr_overlay" />

    <!-- Texto guía -->
    <TextView
        android:id="@+id/tvInstruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escanea el código QR del socio"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="80dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Progress Overlay -->
    <LinearLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrando asistencia..."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</FrameLayout>
